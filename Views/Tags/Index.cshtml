@using RecipeBox.Models

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet</h3>
}
else
{
  <ul>
  @foreach (var t in Model)
  {
    <li>@t.Category</li>
  }
  </ul>
}
<h3><strong>@Html.ActionLink("CREATE A NEW TAG", "Create")</strong></h3>
<h3><strong>@Html.ActionLink("HOME", "Index", "Home")</strong></h3>
